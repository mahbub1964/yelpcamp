<%- include("../partials/header") %>

    <div class="row justify-content-center">
      <div class="col-md-12">
        <h1 style="text-align: center;">Create a New Campground</h1>
      </div>
      <div class="col-xl-5 col-lg-6 col-md-8 col-sm-11" ><!-- style="width: 30%; margin: 25px auto;" -->
        <form action="/campgrounds" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" id="name" name="campground[name]" placeholder="New Campground" />
          </div>
          <div class="form-group">
            <input class="form-control" type="number" placeholder="Price" name="campground[price]" min="0.01" step="0.01" />
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input class="form-control" type="file" id="image" name="image" accept="image/*" required />
          </div>
          <div class="form-group">
            <input class="form-control" type="text" placeholder="Description" name="campground[description]" />
          </div>
          <div class="form-group">
            <input class="form-control" type="text" placeholder="Location" name="location" />
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
        </form>
        <a href="/campgrounds">Go Back</a>
      </div>
    </div><!-- row -->

<%- include("../partials/footer") %>
