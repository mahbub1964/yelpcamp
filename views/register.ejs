<%- include("partials/header") %>

    <div class="row">
      <div class="col-md-12">
        <form class="form-signup" action="/register" method="POST">
          <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

          <label for="inputUsername" class="sr-only">Username</label>
          <input class="form-control" type="text" id="inputUsername" name="username" placeholder="Username" required autofocus />

          <label for="inputPassword" class="sr-only">Password</label>
          <input class="form-control" type="password" id="inputPassword" name="password" placeholder="Password" required />

          <label for="inputFirstname" class="sr-only">First name</label>
          <input class="form-control" type="text" id="inputFirstname" name="firstName" placeholder="First name" />

          <label for="inputLastname" class="sr-only">Last name</label>
          <input class="form-control" type="text" id="inputLastname" name="lastName" placeholder="Last name" />

          <label for="inputEmail" class="sr-only">Email</label>
          <input class="form-control" type="email" id="inputEmail" name="email" placeholder="Email" />

          <label for="inputAvatar" class="sr-only">Avatar url</label>
          <input class="form-control" type="text" id="inputAvatar" name="avatar" placeholder="Avatar url" />

          <label for="inputAdmincode" class="sr-only">Admin code</label>
          <input class="form-control" type="text" id="inputAdmincode" name="adminCode" placeholder="Admin code" />

          <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        </form>
        <div class="form-signup">
          <a href="/campgrounds">Go Back</a>
        </div>
      </div>
    </div>

